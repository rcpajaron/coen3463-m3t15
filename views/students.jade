extends layout

block content
  .w3-top
      ul#myNavbar.w3-navbar.w3-white.w3-card-2
        li
          a.w3-wide(href='/') HOME
        // Right-sided navbar links
        li.w3-right.w3-hide-small
          a(href='/') ABOUT
          a(href='/')
            i.fa.fa-user
            |  TEAM
          a(href='/students')
            i.fa.fa-th
            |  VIEW LIST
          a(href='/students/addnew')  ADD STUDENTS
        // Hide right-floated links on small screens and replace them with a menu icon
 
  h2 Students List
  ul
    for student in students
      li
        a(href='/student/' + student._id ) #{student.first_name} #{student.last_name}, #{student.email}
        br
        
  
