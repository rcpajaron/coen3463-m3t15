//- doctype html
extends layout
block content

    title Sign-Up/Login Form PUP CpE
    
 
    .form
      ul.tab-group
        li.tab.active
          a(href='#signup') Sign Up
        li.tab
          a(href='#login') Log In
      .tab-content
        #signup
          h1 Sign Up for Free
          form(role='form', action='/', method='post')
            .top-row
              .field-wrap
                label
                  | First Name
                  span.req *
                input(type='text', required='', autocomplete='off')
              .field-wrap
                label
                  | Last Name
                  span.req *
                input(type='text', required='', autocomplete='off')
            .field-wrap
              label
                | Email
                span.req *
              input(type='email', required='', autocomplete='off')
            .field-wrap
              label
                | Username
                span.req *
              input(type='text', required='', autocomplete='off')
            .field-wrap
              label
                | Set A Password
                span.req *
              input(type='password', required='', autocomplete='off')
            a(href="#home")    
            button.button.button-block(type='submit') Get Started
        #login
          h1 Welcome Back!
          form(action='/', method='post')
            .field-wrap
              label
                | Username
                span.req *
              input(type='text', required='', autocomplete='off')
            .field-wrap
              label
                | Password
                span.req *
              input(type='password', required='', autocomplete='off')
            button.button.button-block Log In
      // tab-content
    // /form
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='js/index.js')